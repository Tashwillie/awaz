{
  "name": "funnder-backend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && next build",
    "start": "next start",
    "postinstall": "prisma generate",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:smoke": "./smoke-test.sh",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier -w .",
    "type-check": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:seed": "tsx prisma/seed.ts",
    "setup": "chmod +x scripts/setup.sh && ./scripts/setup.sh",
    "deploy": "chmod +x scripts/deploy.sh && ./scripts/deploy.sh",
    "docker:build": "docker build -t funnder-backend .",
    "docker:run": "docker run -p 3000:3000 --env-file .env funnder-backend",
    "docker:compose": "docker-compose up -d"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "dotenv": "^16.3.0",
    "next": "^15.0.0",
    "node-cron": "^3.0.3",
    "pino": "^8.17.0",
    "pino-pretty": "^10.3.0",
    "prisma": "^5.22.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.3.0",
    "undici": "^6.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/node-cron": "^3.0.11",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/supertest": "^6.0.0",
    "@vitest/ui": "^1.0.0",
    "eslint": "^9.37.0",
    "eslint-config-next": "^15.0.0",
    "prettier": "^3.1.0",
    "supertest": "^7.1.4",
    "tsx": "^4.6.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.9.0"
}
